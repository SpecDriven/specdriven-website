        </div>
        <h3 class="text-xl font-heading font-semibold text-charcoal mb-3">
          Team Training & Coaching
        </h3>
        <p class="text-gray-600 mb-4 text-balance">
          Comprehensive training and ongoing coaching to ensure successful adoption across teams.
        </p>
        <ul class="text-sm text-gray-600 space-y-2">
          <li class="flex items-start">
            <span class="text-indigo-500 mr-2">•</span>
            <span>Role-specific workshops</span>
          </li>
          <li class="flex items-start">
            <span class="text-indigo-500 mr-2">•</span>
            <span>Hands-on implementation</span>
          </li>
          <li class="flex items-start">
            <span class="text-indigo-500 mr-2">•</span>
            <span>Change management support</span>
          </li>
        </ul>
      </div>
    </div>

    <!-- CTA Section -->
    <div class="mt-20 text-center">
      <div class="glass rounded-2xl p-10 lg:p-16 border-2 border-indigo-100 relative overflow-hidden">
        <!-- Background decoration -->
        <div class="absolute inset-0 bg-gradient-mesh opacity-30"></div>
        <div class="relative">
          <h3 class="text-h2 font-heading font-bold text-charcoal mb-6">
            Ready to Transform Your Development Process?
          </h3>
          <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto text-balance">
            Start with a free assessment to identify your biggest opportunities for spec-driven improvement with AI.
          </p>
          <button
            class="btn-primary text-lg shadow-purple transform transition-all duration-300 hover:scale-105"
            data-calendly-source="services-cta"
          >
            Schedule Free Assessment
          </button>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  import { handleCalendlyClick, preloadCalendlyScript } from '../../lib/calendly';

  // Handle services CTA click
  const servicesCtaButton = document.querySelector('[data-calendly-source="services-cta"]');
  if (servicesCtaButton) {
    // Preload script on hover/focus
    servicesCtaButton.addEventListener('mouseenter', preloadCalendlyScript);
    servicesCtaButton.addEventListener('focus', preloadCalendlyScript);

    // Handle click
    servicesCtaButton.addEventListener('click', (e) => {
      e.preventDefault();
      handleCalendlyClick('services-cta');
    });
  }

  // Add hover animations for service cards
  if (typeof window !== 'undefined') {
    const serviceCards = document.querySelectorAll('.card');
    serviceCards.forEach(card => {
      card.addEventListener('mouseenter', () => {
        card.style.transform = 'translateY(-2px)';
      });

      card.addEventListener('mouseleave', () => {
        card.style.transform = 'translateY(0)';
      });
    });
  }
</script>